<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AjoutDepenseActivity"
    android:layout_margin="10dp">
    tools:context=".AjoutDepenseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">


    <EditText
        android:id="@+id/titreEvent"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="50px"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Titre de l'evenement"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/montant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Montant en â‚¬"
        android:layout_marginVertical="10dp" />


    <DatePicker
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/payePar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Par qui ?" />

    <Spinner
        android:id="@+id/payeurList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pourQui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pour qui ?" />

    <Switch
        android:id="@+id/user1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch" />

    <Switch
        android:id="@+id/user2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch" />

    <Switch
        android:id="@+id/user3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch" />

    <Button
        android:id="@+id/validerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:layout_marginVertical="10dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
