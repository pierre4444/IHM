<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AjoutDepenseActivity">


    <EditText
        android:id="@+id/titreEvent"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="50px"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Titre de l'evenement" />

    <EditText
        android:id="@+id/montant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Montant en â‚¬" />

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:hint="Date" />

    <TextView
        android:id="@+id/payePar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Par qui ?" />

    <Spinner
        android:id="@+id/payeurList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pourQui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pour qui ?" />

    <Switch
        android:id="@+id/user1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch" />

    <Switch
        android:id="@+id/user2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch" />

    <Switch
        android:id="@+id/user3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch" />

    <Button
        android:id="@+id/validerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider" />
</LinearLayout>